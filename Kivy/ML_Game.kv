<ML_Game_Screen>:
    
    kvStringi: kvI.text
    
    AnchorLayout:
        anchor_x:'left'
        anchor_y:'top'
        
        Label:
            text:'Neural Network'
            #text: root.kvEllipser
            size_hint:(0.5, 0.7)

    AnchorLayout:
        anchor_x:'left'
        anchor_y:'bottom'
        
        TextInput:
            id: kvI
            text:root.kvStringi
            multiline: False
            size_hint:(0.5, 0.3)
            
    AnchorLayout:
        anchor_x:'right'
        anchor_y:'top'
        id: tetrisGame
        
        tetrisWidget:
            #BoxLayout:
            #    size_hint:(0.5, 0.8)
            #   canvas.before:
            #        Color:
            #            rgb: [0.2,0.2,0.2]
            #        Ellipse:
            #            pos: self.pos
            #            size: self.size
            
    AnchorLayout:
        anchor_x:'right'
        anchor_y:'bottom'

        GridLayout:
            cols:4
            size_hint:(0.5,0.2)
                
            Button:
                text: 'N'
                on_press: root.btn_New_Press()
                
            Button:
                text: '<-'
                on_press: root.btn_Left_Press()
                
            Button:
                text: 'V'
                on_press: root.btn_Drop_Press()
                
            Button:
                text: '->'
                on_press: root.btn_Right_Press()
                                
            Button:
                text: 'Q'
                on_press: root.btn_Quit_Press()
                
            Button:
                text: 'VV'
                on_press: root.btn_Fast_Drop_Press()
                
            Button:
                text: 'R'
                on_press: root.btn_Rotate_Press()
                
            Button:
                text: 'P'
                on_press: root.btn_Pause_Press()
